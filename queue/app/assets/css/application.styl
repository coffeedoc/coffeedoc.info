body {
  padding: 0 20px;
  font-family: "Lucida Sans", "Lucida Grande", Verdana, Arial, sans-serif;
  font-size: 13px;
}

a {
  outline: none;
  color: #00B7FF;
}

#beta {
  position: absolute;
  top: 10px;
  left: 20px;
  z-index: 9000;
}

#learn_codo {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 9500;
  opacity: 0.9;
}

.clearJobLog {
  float: right;

  a:hover {
    background: transparent !important;
  }
}

.jobs {
  list-style: none;
  padding: 0;

  .id {
    width: 285px;
  }

  .start, .end {
    width: 215px;
  }

  .error {
    clear: left;
    color: #8b0000;
  }

  li {
    font-size: 1.2em;
    line-height: 1.4em;
    padding: 3px 5px;
    overflow: auto;

    > div {
      float: left;
      font-size: 12px;
    }
  }

  ul {
    padding: 0;
    margin-bottom: 5px;
  }

  ul li {
    list-style: none;
    line-height: 0.9em;
    font-size: 1.05em;
    padding: 3px 5px;
    font-weight: normal;
    padding-left: 25px;
  }

  ul {
    background: #eee;
  }

  li {
    line-height: 2em;
    border-bottom: 1px solid #ddd;
  }

  ul li {
    padding-bottom: 6px;
    background: #f0f0f0;
  }

  ul {
    padding-bottom: 10px;
    background: transparent;
  }

  li:hover {
    background: #eef !important;
  }

  li.alternate, li.alternate:hover {
    background: transparent;
  }

  li.alternate_fork img {
    position: relative;
    top: -3px;
  }

  li a:hover {
    background: transparent;
    color: #3ae;
  }

  li.core > a:first-child {
    font-weight: bold;
  }

  .icon {
    width: 16px;
    height: 16px;
    position: relative;
    float: right;
    top: 6px;
    border: 1px solid #ccc;
    background: #eee;
    padding: 2px;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    margin-left: 3px;
  }

  a:hover .icon {
    background: #fff;
  }
}

#logo {
  margin-top: 25px;
  margin-left: 60px;

  h1 {
    margin: 0;
    border: 0;
    color: #58b;
  }

  small {
    color: #369;
    font-size: 0.6em;
    font-weight: normal;
    opacity: 0.6;
  }

  a {
    text-decoration: none;
    color: #58b;

    &:hover {
      color: #8cf;
      border-bottom: 8px solid #8cf;
    }
  }
}

#content {
  h1 {
    margin: 0;
  }

  h2 {
    margin-top: 0.8em;
  }

  h2 {
    padding: 0;
    padding-bottom: 3px;
    border-bottom: 1px #aaa solid;
    font-size: 1.6em;
    margin: 1.8em 0 0.5em;
  }

  h2 small {
    font-weight: normal;
    font-size: 0.7em;
    display: block;
    float: right;
  }

  a:link, a:visited {
    color: #05A;
    text-decoration: none;

    &:hover {
      background: #ffffa5;
    }
  }

  li.stripe {
    background: #F0F0F0;
  }
}

#footer {
  margin-top: 50px;
  text-align: center;
  padding: 7px 0;
  color: #999;
  font-size: 0.9em;

  .sponsored {
    margin-top: 10px;
  }
}

#footer a:link, #footer a:visited {
  color: #444;
  text-decoration: none;
  border-bottom: 1px dotted #bbd;
}

#footer a:hover {
  color: #05a;
}
